# Set vim as default editor (vi is the default otherwise)
export EDITOR="subl"
bindkey -v

#########################################################################
# Tool paths
#########################################################################

#########################################################################
# Tool settings
#########################################################################
export FONTCONFIG_PATH=/opt/X11/lib/X11/fontconfig
export NVM_DIR=~/.nvm
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

source ~/.extra
